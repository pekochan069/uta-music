---
import { Image } from "astro:assets";

import Logo from "~/assets/logo.png";
import Link from "~/components/Link";
import ThemeProvider from "~/components/Navbar/ThemeProvider";
---

<header
  class="relative z-50 flex w-full flex-wrap pb-4 pt-2 text-sm sm:flex-nowrap sm:justify-start sm:pb-2"
>
  <nav
    aria-label="Global"
    class="container mx-auto w-full px-4 sm:flex sm:items-center sm:justify-between 1080p:max-w-screen-2xl 1440p:max-w-screen-1080p"
  >
    <div class="flex items-center justify-between">
      <a
        class="flex w-max select-none gap-2 rounded-xl p-1.5 outline-none ring-slate-400 ring-offset-2 transition-colors duration-75 ease-in-out hover:bg-slate-200 focus:ring-2 active:bg-slate-100 dark:ring-slate-400 dark:ring-offset-2 dark:hover:bg-slate-700 dark:focus:ring-2 dark:active:bg-slate-600 sm:px-3 sm:py-2"
        href="/"
        ><Image alt="Logo Image" class="h-10 w-10" src={Logo} /><div
          class="grid w-max items-start justify-center text-xl font-bold leading-5 tracking-wide"
        >
          <span class="text-violet-500">Uta</span><span
            class="text-slate-700 dark:text-slate-300">Music</span
          >
        </div>
      </a>
      <div class="sm:hidden">
        <button
          aria-controls="navbar-with-mega-menu"
          aria-label="Toggle navigation"
          class="hs-collapse-toggle inline-flex items-center justify-center gap-x-2 rounded-lg border border-slate-200 bg-white p-2 text-slate-800 shadow-sm hover:bg-slate-50 disabled:pointer-events-none disabled:opacity-50 dark:border-slate-700 dark:bg-transparent dark:text-white dark:hover:bg-white/10 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-slate-600"
          data-hs-collapse="#navbar-with-mega-menu"
          type="button"
        >
          <svg
            class="h-4 w-4 shrink-0 hs-collapse-open:hidden"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
            ><line x1="3" x2="21" y1="6" y2="6"></line><line
              x1="3"
              x2="21"
              y1="12"
              y2="12"></line><line x1="3" x2="21" y1="18" y2="18"></line></svg
          >
          <svg
            class="hidden h-4 w-4 shrink-0 hs-collapse-open:block"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
            ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
          >
        </button>
      </div>
    </div>
    <div
      class="hs-collapse hidden grow basis-full overflow-hidden transition-all duration-300 sm:block"
      id="navbar-with-mega-menu"
    >
      <div
        class="mt-5 flex flex-col gap-5 sm:mt-0 sm:flex-row sm:items-center sm:justify-end sm:ps-5"
      >
        <Link active href="/">Home</Link>
        <Link href="/">Other</Link>
        <div
          class="hs-dropdown [--adaptive:none] [--auto-close:inside] [--strategy:static] sm:[--placement:bottom-right] sm:[--strategy:fixed]"
        >
          <button
            class="flex w-full items-center font-medium text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300"
            id="hs-mega-menu-basic-dr"
            type="button"
          >
            Settings
            <svg
              class="ms-1 h-4 w-4 shrink-0"
              fill="none"
              height="24"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              width="24"
              xmlns="http://www.w3.org/2000/svg"
              ><path d="m6 9 6 6 6-6"></path></svg
            >
          </button>

          <div
            class="hs-dropdown-menu top-full z-10 hidden rounded-lg bg-white p-2 opacity-0 transition-[opacity,margin] duration-[0.1ms] before:absolute before:-top-5 before:start-0 before:h-5 before:w-full hs-dropdown-open:opacity-100 dark:divide-slate-700 dark:border-slate-700 dark:bg-slate-800 sm:w-48 sm:border sm:shadow-md sm:duration-[150ms] sm:dark:border"
          >
            <ThemeProvider
              class="flex w-full items-center gap-x-3.5 rounded-lg px-3 py-2 text-sm text-slate-800 hover:bg-slate-100 focus:ring-2 focus:ring-blue-500 dark:text-slate-400 dark:hover:bg-slate-700 dark:hover:text-slate-300"
              client:load
            />
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
